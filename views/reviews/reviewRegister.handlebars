

<h1>{{title}}</h1>

<body>

    {{#if hasErrors}}
        <p class="error">
            {{error}}
        </p>
    {{/if}}

    <form action="/review/addReview/6387f1fd73e6af3e6a39b074" method="post">
     <main class="main">
            <section class="container">
              <div class="title">
                <h2>Reviews Card</h2>
                <div class="underline"></div>
              </div>
              <article class="review">
                
                <label for="titleInput">
                    Title:
                </label>
                <input id="titleInput" name="titleInput"/>

                <label for="ratingInput">
                    Rating:
                </label>
                <input id="ratingInput" name="ratingInput" type="number"/>
                
                <label for="bodyInput">
                    Description:
                </label>
                <textarea id="bodyInput" name="bodyInput" rows="5" width="50%"></textarea>

                  <br>
                <div class="btn">
                <button class="reviewbutton" type="submit">Submit</button>
                </div>
                
                
              </article>
            </section>
          </main>

    </form>

