<main class="signup-page">
    <div class="signup-content">
        <div class="signup-error">
            {{#if hasErrors}}
                <p class="error">
                    {{error}}
                </p>
            {{/if}}
        </div>

        <form action="/register" method="post" id="registration-form" class="signup-form">
            <h3> Welcome to Entrep√¥t </h3>

            <label for="usernameInput"></label>
            <input
            type="text"
            id="usernameInput"
            name="usernameInput"
            placeholder="username"/>

            <label for="emailInput"></label>
            <input
            name="emailInput"
            id="emailInput"
            placeholder="email"/>

            <label for="passwordInput"></label>
            <input
            type="password"
            id="passwordInput"
            name="passwordInput"
            placeholder="password"/>


            <button type="submit">Submit</button>
            <br>
            <a href="/login" class="login-link">Click here to log-in!</a>
        </form>
    </div>
        
</main>




