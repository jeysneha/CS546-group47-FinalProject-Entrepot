<main class="signup-page">
    <div class="signup-content">
        <div class="signup-error" id="signup-error">
            {{#if hasErrors}}
                <p class="error">
                    {{error}}
                </p>
            {{/if}}
        </div>

        <form action="/register" method="post" id="registration-form" class="signup-form">
            <h3> Welcome to Entrep√¥t </h3>

            <label for="register-usernameInput"></label>
            <input
                    type="text"
                    id="register-usernameInput"
                    name="usernameInput"
                    placeholder="username"/>

            <label for="register-emailInput"></label>
            <input
                    name="emailInput"
                    id="register-emailInput"
                    placeholder="email"/>

            <label for="register-passwordInput"></label>
            <input
                    type="password"
                    id="register-passwordInput"
                    name="passwordInput"
                    placeholder="password"/>


            <button type="submit">Submit</button>
            <br>
            <a href="/login" target="_blank" class="login-link">Click here to log-in!</a>
        </form>
    </div>
        
</main>




