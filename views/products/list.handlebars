<body>
  <main>
    <section class="main-section">
      <div class="product-container">
        <a href = "/offers/postRegister">Create A Post</a>
        <h3>popular exchanges</h3>
        <div class="products">
          <div class="product">
            <div class="product-under">
              <figure class="product-image">
                {{!-- <img src="images/headphone.jpg" alt="headphone" /> --}}
                {{#each images}}
                <img src="{{this}}" alt="Image">
                {{/each}}

                <div class="product-over">
                  <button class="btn btn-small addToCart" data-product-id="1">
                    <i class="fas fa-cart-plus"></i>offer to exchange
                  </button>
                  <a href="detail_page.html" class="btn btn-small">More Info</a>
                </div>
              </figure>
              <div class="product-summary">
                <h4 class="productName">{{this.title}}</h4>
                <span class="stars"></span>
                <p>
                  {{#each categories}}
                <p>{{this}}</p>
                {{/each}}
                {{!-- bought in 2020, barely used --}}
                </p>
              </div>
            </div>
          </div>

        </div>
      </div>
    </section>
  </main>