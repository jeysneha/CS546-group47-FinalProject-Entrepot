<main>
    <div class="container" style="background-color:violet;">
        <form id="product-signup-form" class="center padding" action="/post" method="POST">
            <div class="form-group">
                <h1>Post for exchange:</h1>

                <label for="name">Product Title:</label>
                <input type="text" class="form-control" id="product-title" name="name" placeholder="Enter product Name">
            </div>

            <div class="form-group">
                <label for="product-body">Product body:</label>
                <input type="text" class="form-control" id="product-body" name="productBody"
                    placeholder="Enternbody of product">
            </div>
            <div class="form-group">
                <label for="category">Category:</label>
                <select id="product-Cate">
                    <option value="elec">Choose Your Category</option>
                    <option value="Apparel & Accessories"></option>
                    <option value="Jewelry & Watches"></option>
                    <option value="Motors, style & Fashion"></option>
                    <option value="home & garden"></option>
                    <option value="sporting Goods"></option>
                    <option value=" Health & Wellness"></option>
                    <option value="Medical Health"></option>
                    <option value="Children & infants"></option>
                    <option value="Pets & Pets supplies"></option>
                    <option value="Consumer Electronic Goods"></option>
                    <option value="Home improvement"></option>
                    <option value="Collectibles & Art"></option>
                    <option value="other Categories / to be categorized"></option>
                </select>

                <form action="/upload/profilepic" enctype="multipart/form-data" method="POST">
                    <br>
                    <label for="picture" class="labels">Upload product image:</label>
                    <input type="file" id="product-image" accept="image/*" class="btn  bottom-padding" required />
                    <input type="submit" class="btn-private btn btn-primary" value="Upload Photo" />
                </form>

        </form>
        <br>
        <br>

        <button type="submit" id="btn-id" class="btn btn-primary" style="text-align:center; margin-left: 250px;">
            Submit</button>
        <h1><a class="BacktoListing" href="/">Go Back To ProductListing</a></h1>
        </form>

        {{#if errorcode}}

        <p class="error">{{message}}</p>
        {{/if}}


    </div>

</main>